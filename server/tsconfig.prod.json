{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleDetection": "force",
    "types": ["node"]
  },
  "include": [
    "src/server.prod.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.ts"
  ],
  "files": [
    "src/server.prod.ts"
  ]
}
